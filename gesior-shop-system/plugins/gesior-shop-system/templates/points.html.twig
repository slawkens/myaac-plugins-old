<div class="main-box">
	{% if enabled.paypal %}
		<div class="floating-box">
			<div class="floating-logo-box">
				<a href="?subtopic=points&system=paypal" title="Gain with PayPal"><img class="floating-logo" src="{{ constant('BASE_URL') }}plugins/gesior-shop-system/images/paypal.gif" border="0" /></a><br/>
			</div>
			<div class="info-box">
				Credit card, paypal.<br/>
				<b>{{ config.paypal.currency_code }}</b>
			</div>
			<div class="info-box">
				ALL COUNTRIES!
			</div>
		</div>
	{% endif %}
	{% if enabled.stripe %}
		<div class="floating-box">
			<div class="floating-logo-box">
				<a href="?subtopic=points&system=stripe" title="Pay with Stripe">
					<img class="floating-logo" src="{{ constant('BASE_URL') }}plugins/gesior-shop-system/images/stripe.png" width="150" height="50" alt="Stripe Logo" border="0"  />
				</a>
				<br/>
			</div>
			<div class="info-box">
				Credit card, Bank Transfer.<br/>
				<b>ALL CURRENCIES</b>
			</div>
			<div class="info-box">
				ALL COUNTRIES!
			</div>
		</div>
	{% endif %}
	{% if enabled.fortumo %}
		<div class="floating-box">
			<div class="floating-logo-box">
				<script src="https://assets.fortumo.com/fmp/fortumopay.js" type="text/javascript"></script>
				<a id="fmp-button" href="#" rel="{{ config.fortumo.service_id }}/{{ account_logged.getId() }}">
					<img class="floating-logo" src="https://assets.fortumo.com/fmp/fortumopay_150x50_red.png" width="150" height="50" alt="Mobile Payments by Fortumo" border="0" />
				</a><br/>
			</div>
			<div class="info-box">
				SMS.<br/>
				<b>ALL CURRENCIES</b>
			</div>
			<div class="info-box">
				ALL COUNTRIES!
			</div>
		</div>
	{% endif %}
	{% if enabled.cryptobox %}
		<div class="floating-box">
			<div class="floating-logo-box">
				<a href="?subtopic=points&system=cryptobox" title="Pay with Crypto Coins"><img class="floating-logo" src="{{ constant('BASE_URL') }}plugins/gesior-shop-system/images/gourl.png" border="0" /></a><br/>
			</div>
			<div class="info-box">
				<b>BitCoins</b>
			</div>
			<div class="info-box">
				ALL COUNTRIES!
			</div>
		</div>
	{% endif %}
</div>
<style>
.main-box {
	margin: 0 auto;
	 display: inline-block;
    height: 100%;
}
.floating-box {
	float: left;
	margin-left: 30px;
}
.floating-logo-box {
	height: 120px;
	line-height:8em;
}
.floating-logo {
	vertical-align: bottom;
}
.info-box {
	height: 70px;
	text-align: center;
}
</style>
